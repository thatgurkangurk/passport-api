---
type Props = {
    title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - gurkz Passport</title>
	</head>
	<body class="min-h-screen w-full bg-slate-800 text-white">
        <main class="p-2">
            <slot />
        </main>
	</body>
</html>
